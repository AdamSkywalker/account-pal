<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.company.account.gui.bill.BillBrowse"
        focusComponent="billsTable"
        lookupComponent="billsTable"
        messagesPack="com.company.account.gui.bill">
    <dsContext>
        <collectionDatasource id="billsDs"
                              class="com.company.account.entity.Bill"
                              view="bill-edit">
            <query>
                <![CDATA[select e from account$Bill e order by e.date
                ]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="billsTable"
            spacing="true">
        <vbox>
            <label id="month"/>
            <label id="week"/>
        </vbox>
        <filter id="filter"
                datasource="billsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="billsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="product"/>
                <column id="amount"/>
                <column id="date">
                    <formatter class="com.company.account.gui.bill.DateFormatter"/>
                </column>
                <column id="shop"/>
            </columns>
            <rows datasource="billsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="billsTable.create"/>
                <button id="editBtn"
                        action="billsTable.edit"/>
                <button id="removeBtn"
                        action="billsTable.remove"/>
                <button id="refreshBtn" action="billsTable.refresh"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
